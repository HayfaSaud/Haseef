<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <TextView
        android:id="@+id/staffName"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/staffName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/arvo"
        android:text="Staff name:"
        android:textColor="#3F51B5"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/staffID"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staffName"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/StaffID_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staffName_txt"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/arvo"
        android:text="Staff ID:"
        android:textColor="#3F51B5"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/staffAge"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staffID"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/age_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/StaffID_txt"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/arvo"
        android:text="Staff age:"
        android:textColor="#3F51B5"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/location"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staffAge"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/location_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_txt"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/arvo"
        android:text="Staff location:"
        android:textColor="#3F51B5"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/working"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/working_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_txt"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/arvo"
        android:text="working since:"
        android:textColor="#3F51B5"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/staffImage3"
        android:layout_marginTop="60dp"
        android:layout_height="80dp"
        android:layout_width="130dp"
        android:layout_marginLeft="-10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/working"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:background="#aaa" />

    <ImageButton
        android:id="@+id/deleteBtn"
        android:layout_width="14dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="360dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_trash"
        android:drawableBottom="@drawable/ic_trash"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/editBtn"
        android:layout_width="14dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_edit"
        android:drawableBottom="@drawable/ic_edit"
        tools:ignore="ContentDescription" />

</RelativeLayout>